<Page x:Class="KinectPhysiotherapy.PhysiotherapistPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KinectPhysiotherapy"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PhysiotherapistPage1"  Height="720" Width="960" Background="LightGray">

    <Grid Margin="10 0 10 0">
        <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

        <!-- <Viewbox HorizontalAlignment="Center" RenderTransformOrigin="0.481,0.509" Margin="0,0,0,10" Width="960"/> -->

        <Image x:Name="camera" RenderTransformOrigin="0.5,0.5"   Margin="221,96,204,178" Width="512" Height="424"   />
        <!--Width="512" Height="424"-->
        <Canvas Name="imgCanvas" Width="512" Height="424" Margin="221,96,204,178" />
        <Canvas Name="baloonCanvas" Width="512" Height="424" Margin="221,96,204,178"  RenderTransformOrigin="0.5,0.5" />
        <Canvas Name="bodyCanvas" Width="512" Height="424" Margin="221,96,204,178" />
        
        <Button x:Name="Start" Content="Start"  Margin="672,642,46,106.6" Click="StartRecording" RenderTransformOrigin="0.5,0.5" />
        <TextBox x:Name="textBox_baloonsHitted" HorizontalAlignment="Left" Height="23" Margin="32,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxBaloonPosition" HorizontalAlignment="Left" Height="36" Margin="358,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
        <TextBlock HorizontalAlignment="Left" Margin="601,12,0,0" TextWrapping="Wrap" Text="Hand" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxHandPosition" HorizontalAlignment="Left" Height="36" Margin="358,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
        <TextBlock HorizontalAlignment="Left" Margin="601,61,0,0" TextWrapping="Wrap" Text="Last Baloon" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_baloonsFloated" HorizontalAlignment="Left" Height="23" Margin="32,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBox_percent" HorizontalAlignment="Left" Height="23" Margin="32,354,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>





    </Grid>
</Page>
