<Window x:Class="KinectPhysiotherapy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectPhysiotherapy"
        mc:Ignorable="d"
        Title="MainWindow"  Height="720" Width="960" Background="DarkGray"
        Closing = "MainWindow_Closing">

    <Grid x:Name="grid" Margin="0,10,3.6,-19.6" >
        
        <Button x:Name="PhysiotherapistButton1" Content="Balony"  Margin="144,188,708,486" Click="PhysiotherapistButton1_Click" RenderTransformOrigin="0.5,0.5" />
        <Frame x:Name="Main" Margin="0,0,0,22" />
        <TextBlock x:Name="textBlock" Text="{Binding StatusText}" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" RenderTransformOrigin="0.496,0.52" Margin="10,10,0,0"/>


    </Grid>
</Window>
